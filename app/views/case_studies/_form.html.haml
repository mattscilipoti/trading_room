= simple_form_for @case_study do |f|
  -if @case_study.errors.any?
    #error_explanation
      %h2= "#{pluralize(@case_study.errors.count, "error")} prohibited this case_study from being saved:"
      %ul
        - @case_study.errors.full_messages.each do |msg|
          %li= msg

  =f.input :comment
  .actions
    = f.submit 'Save'
